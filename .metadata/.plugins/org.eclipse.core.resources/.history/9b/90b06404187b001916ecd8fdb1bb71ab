
public class Calculator {

	private int numberA;
	private int numberB;

	public Calculator(int numA, int numB) {
		this.numberA = numA;
		this.numberB = numB;
	}

	private float addTwoNumbers() {
		return numberA + numberB;
	}

	private float subtractTwoNumbers() {
		return numberA - numberB;
	}

	private float divideTwoNumbers() {
		return numberA / numberB;
	}

	private float multiplyTwoNumbers() {
		return numberA * numberB;
	}

	public float calculate(char operator) {

		switch (operator) {

		case '-':
			return subtractTwoNumbers();
		case '/':
			return divideTwoNumbers();
		case '*':
			return multiplyTwoNumbers();
		default:
			return addTwoNumbers();
		}

	}
}
