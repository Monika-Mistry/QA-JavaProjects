
public class Calculator {

	private int numberA;
	private int numberB;

	public Calculator(int numA, int numB) {
		this.numberA = numA;
		this.numberB = numB;
	}

	private double addTwoNumbers() {
		return numberA + numberB;
	}

	private double subtractTwoNumbers() {
		return numberA - numberB;
	}

	private double divideTwoNumbers() {
		return numberA / numberB;
	}

	private double multiplyTwoNumbers() {
		return numberA * numberB;
	}

	public double calculate(char operator) {

		switch (operator) {

		case '-':
			return subtractTwoNumbers();
		case '/':
			return divideTwoNumbers();
		case '*':
			return multiplyTwoNumbers();
		default:
			return addTwoNumbers();
		}

	}
}
