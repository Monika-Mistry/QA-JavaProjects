
public class Calculator {

	private int numberA;
	private int numberB;

	public Calculator() {
	}

	public void setFirstNumber(int num) {
		numberA = num;
	}

	public void setSecondNumber(int num) {
		numberB = num;
	}

	private int addTwoNumbers() {
		return numberA + numberB;
	}

	private int subtractTwoNumbers() {
		return numberA - numberB;
	}

	private float divideTwoNumbers() {
		return numberA / numberB;
	}

	private int multiplyTwoNumbers() {
		return numberA * numberB;
	}

	public void calculate(char operator) {
		switch (operator) {
		case '+':
			System.out.println(numberA + "+" + numberB + "=" + addTwoNumbers());
			break;
		case '-':
			System.out.println(numberA + "-" + numberB + "=" + subtractTwoNumbers());
			break;
		case '/':
			System.out.println(numberA + "/" + numberB + "=" + divideTwoNumbers());
			break;
		case '*':
			System.out.println(numberA + "*" + numberB + "=" + multiplyTwoNumbers());
			break;
		default:
			System.out.println("first Number" + numberA);
			System.out.println("second Number" + numberB);
		}

	}
}
