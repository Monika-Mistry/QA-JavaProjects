
public class Runner {

	public static void main(String[] args) {

		// Person john = new Person("John", 21, "Software Developer");
		Person smith = new Person("Smith", 30, "Engineer");
		Person jeff = new Person("Jeff", 25, "Software Developer");
		Person person = new Person("Person", 30, "Business Analyst");

		PersonManager manager = new PersonManager();
		// manager.addPerson(john);
		manager.addPerson(smith);
		manager.addPerson(jeff);
		manager.addPerson(person);
		manager.addNewPerson("John", 21, "Software Developer");

		manager.getPeople().stream().forEach(p -> System.out.println(p));

		System.out.println("SEARCH RESULT: " + manager.searchPersonByName("John"));

	}

}
